# Root environment variables for the monorepo
# Copy this to .env.local and fill in your actual values

# Development mode
NODE_ENV=development

# Shared configuration that both api/ and mobile/ can inherit
SHARED_SECRET=your_shared_secret_here

# Database connection (for migrations, etc.)
DATABASE_URL=postgresql://user:password@localhost:5432/famatic

# Optional: Shared development settings
ENABLE_LOGGING=true
DEBUG_MODE=true